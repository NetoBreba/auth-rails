<% content_for :conteudo do %>
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <%= link_to('Logout [ ' + current_user.name + ' ]', destroy_user_session_path, method: :delete, :class => "btn btn-warning btn-block", :style => "margin-top:50px; margin-bottom:10px") %>
            <%= link_to  "Insert Book", new_book_path, :class => "btn btn-success btn-block", "style" => "margin-bottom:10px" %>
            <table class="table table-striped table-dark">
                <thead>
                  <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Pubish Date</th>
                    <th>Edition</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                    <% @books.each do |book| %>
                    <tr>
                        <th><%= book.id %></th>
                        <td><%= book.title %></td>
                        <td><%= book.publishDate %></td>
                        <td><%= book.edition %></td>
                        <% if can? :update, Book %>
                            <td><%= link_to  "Update", edit_book_path(book), :class => "btn btn-primary" %></td>
                        <% end %>
                        <% if can? :destroy, Book %>
                        <td><%= link_to 'Delete', destroy_book_path(book), :class => "btn btn-danger" %></td>
                        <% end %>
                    </tr>
                    <% end %>
                </tbody>
              </table>
        </div>
    </div>
<% end %>

<%= render template: "layouts/books" %>